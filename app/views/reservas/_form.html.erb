
<%= simple_form_for(@reserva) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :estabelecimento %>
    <%= f.input :nome_cliente %>
    <%= f.input :telefone_cliente %>
    <%= f.input :data %>
    <%= f.input :hora %>
    <%= f.input :quantidade_pessoas %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
