<div id="<%= dom_id product %>">
  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= link_to product.image.filename, product.image if product.image.attached? %>
  </p>

  <p>
    <strong>Promotion active:</strong>
    <%= product.promotion_active %>
  </p>

  <p>
    <strong>Promotion price:</strong>
    <%= product.promotion_price %>
  </p>

</div>
