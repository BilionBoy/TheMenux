<div id="<%= dom_id produto %>">
  <p>
    <strong>Categoria:</strong>
    <%= produto.categoria_id %>
  </p>

  <p>
    <strong>Nome:</strong>
    <%= produto.nome %>
  </p>

  <p>
    <strong>Descricao:</strong>
    <%= produto.descricao %>
  </p>

  <p>
    <strong>Preco:</strong>
    <%= produto.preco %>
  </p>

  <p>
    <strong>Imagem:</strong>
    <%= link_to produto.imagem.filename, produto.imagem if produto.imagem.attached? %>
  </p>

  <p>
    <strong>Promocao ativa:</strong>
    <%= produto.promocao_ativa %>
  </p>

  <p>
    <strong>Preco promocional:</strong>
    <%= produto.preco_promocional %>
  </p>

</div>
