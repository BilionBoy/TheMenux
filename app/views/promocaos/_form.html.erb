
<%= simple_form_for(@promocao) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :estabelecimento %>
    <%= f.input :titulo %>
    <%= f.input :descricao %>
    <%= f.input :data_inicio %>
    <%= f.input :data_fim %>
    <%= f.input :ativo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
